<h1>Submit a picture</h1>

<%= form_for(:photo) do |f| %>
	
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_field :description, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.file_field :image %>
	</div>

	<div class="form-group">
		<%= f.submit "Post Image", class: 'btn btn-warning btn-lg' %>
	</div>
<% end %>