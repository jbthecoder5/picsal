<div class="container">
	<div class="row">
		<% for i in @photos %>
			<div class="col">
				<div class="card" style="width: 20rem;">
					<%= link_to image_tag i.image.url(:thumb), class: 'card-img-top' %><br>
					<div class="card-block">
						<h4 class="card-title"><%= i.name %></h4>
							<p class="card-text"><%= i.description %></p>
							<%= link_to "View Image", i.image.url, class: 'btn btn-primary' %>
					</div>
				</div><br>
			</div>
		<% end %>
	</div>
</div>